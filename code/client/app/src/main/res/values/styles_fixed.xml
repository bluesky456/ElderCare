<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="EditTextStyle">
        <item name="android:textSize">@dimen/editText_font_size</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:textColor">@color/editText_font_color</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textSize">@dimen/code_button_font_size</item>
        <item name="android:textColor">@color/button_font_color</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="CodeButtonStyle">
        <item name="android:textSize">@dimen/button_font_size</item>
        <item name="android:background">@color/button_background</item>
        <item name="android:textColor">@color/code_button_font_color</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>
    
    <style name="TextViewStyle">
        <item name="android:textSize">@dimen/textView_font_size</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>


   <style name="AnimationBottomFade">  
        <item name="android:windowEnterAnimation">@anim/in_bottomtotop</item>  
        <item name="android:windowExitAnimation">@anim/out_toptobottom</item>  
    </style>
</resources>